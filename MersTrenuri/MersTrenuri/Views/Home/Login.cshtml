@{
    ViewBag.Title = "Login Page";
}
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-6 offset-lg-0 offset-md-3">
                <div id="square7" class="square square-7" style="transform: perspective(500px) rotateY(3.12deg) rotateX(-2.34deg);"></div>
                <div id="square8" class="square square-8" style="transform: perspective(500px) rotateY(3.12deg) rotateX(-2.34deg);"></div>
                <div class="card card-register mt-5">
                    <div class="card-header">
                        <img class="card-img" src="Content/square1.png" alt="Card image">
                        <h4 class="card-title text-white">Login</h4>
                    </div>
                    <div class="card-body">
                        <form class="form">
                            <div class="my-3">

                                <input type="text" class="form-control" placeholder="Full Name">
                            </div>
                            <div class="my-3">

                                <input type="text" placeholder="Email" class="form-control">
                            </div>
                            <div class="my-3">

                                <input type="text" class="form-control" placeholder="Password">
                            </div>
                            <div class="form-check text-left">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox">
                                    <span class="form-check-sign"></span>
                                    I agree to the
                                    <a href="javascript:void(0)">terms and conditions</a>.
                                </label>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <a href="javascript:void(0)" class="btn btn-info btn-round btn-lg">Get Started</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="register-bg"></div>
    </div>
</div>